<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" > 
<mapper namespace="net.monkeystudio.chatrbtw.mapper.ChatPetAppearenceSiteMapper">
    <resultMap id="baseResultMap" type="net.monkeystudio.chatrbtw.entity.ChatPetAppearenceSite">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="chat_pet_type" property="chatPetType" jdbcType="INTEGER" />
        <result column="site" property="site" jdbcType="INTEGER" />
        <result column="remark" property="remark" jdbcType="VARCHAR" />
        <result column="code_site" property="codeSite" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        id, chat_pet_type, site, remark
    </sql>

    <select id="selectByType" resultMap="baseResultMap" parameterType="map">
        select
            <include refid="Base_Column_List"></include>
        from
            e_chat_pet_appearence_site
        where
            chat_pet_type = #{chatPetType}
        order by
            code_site asc
    </select>


</mapper>
