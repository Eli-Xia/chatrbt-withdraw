<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.monkeystudio.chatrbtw.mapper.ChatPetExpFlowMapper" >
  <resultMap id="BaseResultMap" type="net.monkeystudio.chatrbtw.entity.ChatPetExpFlow" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="chat_pet_id" property="chatPetId" jdbcType="INTEGER" />
    <result column="exp_action_type" property="expActionType" jdbcType="INTEGER" />
    <result column="amount" property="amount" jdbcType="REAL" />
  </resultMap>
  <resultMap id="ResultMapWithBLOBs" type="net.monkeystudio.chatrbtw.entity.ChatPetExpFlow" extends="BaseResultMap" >
    <result column="note" property="note" jdbcType="LONGVARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, create_time, chat_pet_id, exp_action_type,amount
  </sql>
  <sql id="Blob_Column_List" >
    note
  </sql>
  <select id="selectByPrimaryKey" resultMap="ResultMapWithBLOBs" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from e_chat_pet_exp_flow
    where id = #{id,jdbcType=INTEGER}
  </select>

  <insert id="insert" parameterType="net.monkeystudio.chatrbtw.entity.ChatPetExpFlow" >
    insert into e_chat_pet_exp_flow (id, create_time,chat_pet_id, exp_action_type,note,amount)
    values (#{id,jdbcType=INTEGER}, #{createTime,jdbcType=TIMESTAMP},#{chatPetId,jdbcType=INTEGER}, #{expActionType,jdbcType=INTEGER},#{note,jdbcType=LONGVARCHAR}
    ,IFNULL(#{amount},0))
  </insert>

  <update id="update">
    update e_chat_pet_coin_flow set amount = IFNULL(#{amount},0) where id = #{id}
  </update>

  <select id="selectExpFlow" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>,<include refid="Blob_Column_List"/> FROM e_chat_pet_exp_flow WHERE chat_pet_id = #{chatPetId}
    order by create_time desc
    limit #{startIndex}, #{pageSize}
  </select>

  <select id="selectByActionType" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>,<include refid="Blob_Column_List"/> FROM e_chat_pet_exp_flow WHERE exp_action_type = #{actionType}
  </select>

  <select id="countPeriodTotalAmount" resultType="java.lang.Float">
    SELECT sum(amount) FROM e_chat_pet_exp_flow
    <where>
      <if test="startTime != null">
        and create_time &gt;= #{startTime}
      </if>
      <if test="endTime != null">
        and create_time &lt;= #{endTime}
      </if>
    </where>
  </select>



</mapper>