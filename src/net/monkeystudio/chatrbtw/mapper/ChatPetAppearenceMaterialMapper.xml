<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" > 
<mapper namespace="net.monkeystudio.chatrbtw.mapper.ChatPetAppearenceMaterialMapper">
    <resultMap id="baseResultMap" type="net.monkeystudio.chatrbtw.entity.ChatPetAppearenceMaterial">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="site" property="site" jdbcType="INTEGER" />
        <result column="key" property="key" jdbcType="CHAR" />
        <result column="chat_pet_type" property="chatPetType" jdbcType="INTEGER" />
    </resultMap>
    <sql id="Base_Column_List" >
        id, `site`, `key` , `chat_pet_type`
    </sql>

    <select id="selectListBySite" resultMap="baseResultMap" parameterType="java.lang.Integer">
        select
            <include refid="Base_Column_List"/>
        from
            e_chat_pet_appearence_material
        where
            chat_pet_type = #{chatPetType} and site = #{site}
    </select>


</mapper>
