<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.monkeystudio.chatrbtw.mapper.PushMessageConfigMapper">
  <resultMap id="BaseResultMap" type="net.monkeystudio.chatrbtw.entity.PushMessageConfig">
    <id column="id" jdbcType="INTEGER" property="id" />
    <id column="key" jdbcType="VARCHAR" property="key" />
    <id column="value" jdbcType="VARCHAR" property="value" />
    <id column="desc" jdbcType="VARCHAR" property="desc" />
  </resultMap>

  <sql id="Base_Column_List">
    id, `key`,`value`,`desc`
  </sql>
  
  <select id="selectByKey" resultMap="BaseResultMap">
    select
      <include refid="Base_Column_List" />
    FROM
      e_push_message_config
    WHERE
      `key` = #{key}
  </select>

  <select id="selectAll" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    FROM
    e_push_message_config
  </select>

  <update id="updateItem" parameterType="map">
    update e_push_message_config
        set
            `value` = #{value}
    WHERE
        `key` = #{key}
  </update>

</mapper>