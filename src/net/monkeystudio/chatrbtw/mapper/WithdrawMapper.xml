<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" > 
<mapper namespace="net.monkeystudio.chatrbtw.mapper.WithdrawMapper">
    <resultMap id="baseResultMap" type="net.monkeystudio.chatrbtw.entity.Withdraw">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="wx_fan_id" property="wxFanId" jdbcType="INTEGER" />
        <result column="account_flow_id" property="accountFlowId" jdbcType="INTEGER" />
        <result column="mch_trade_no" property="mchTradeNo" jdbcType="VARCHAR" />
        <result column="wx_payment_no" property="wxPaymentNo" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="payment_time" property="paymentTime" jdbcType="TIMESTAMP" />
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
    </resultMap>
    <sql id="Base_Column_List" >
        `id`, `wx_fan_id` ,`account_flow_id`,`mch_trade_no`,`wx_payment_no`,`create_time`,`payment_time`,`amount`
    </sql>

    <insert id="insert" parameterType="net.monkeystudio.chatrbtw.entity.Withdraw" keyProperty="id" useGeneratedKeys="true">
      insert into `e_withdraw` (`wx_fan_id` ,`account_flow_id`,`mch_trade_no`,`wx_payment_no`,`create_time`,`payment_time`,`amount`)
      values (#{wxFanId},#{accountFlowId},#{mchTradeNo},#{wxPaymentNo}, #{createTime},#{paymentTime},#{amount})
    </insert>
    
    <update id="update">
        update e_withdraw set
        `wx_fan_id` = #{wxFanId},
        `account_flow_id` = #{accountFlowId},
        `mch_trade_no` = #{mchTradeNo},
        `wx_payment_no` = #{wxPaymentNo},
        `create_time` = #{createTime},
        `payment_time`= #{paymentTime},
        `amount` = #{amount}
    </update>

    <select id="sumByWxFanIdAndDate" resultType="java.math.BigDecimal">
        select sum(amount) from e_withdraw where wx_fan_id = #{wxFanId} and create_time &gt;= #{beginTime}
    </select>
    
    <select id="countByWxFanIdAndDate" resultType="java.lang.Integer">
        select count(id) from e_withdraw where wx_fan_id = #{wxFanId} and create_time &gt;= #{beginTime}
    </select>

    <select id="selectLastPayTime" resultType="java.util.Date">
        select payment_time from e_withdraw where wx_fan_id = #{wxFanId} and create_time &gt;= #{brginTime} and payment_time is not null
        order by payment_time DESC LIMIT 1
    </select>


</mapper>