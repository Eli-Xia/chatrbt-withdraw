<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" > 
<mapper namespace="net.monkeystudio.chatrbtw.mapper.UserIdempotentMapper">
    <resultMap id="baseResultMap" type="net.monkeystudio.chatrbtw.entity.Account">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="wx_fan_id" property="wxFanId" jdbcType="INTEGER" />
        <result column="amount" property="amount" jdbcType="DECIMAL" />
    </resultMap>
    <sql id="Base_Column_List" >
        `id`, `wx_fan_id`, `amount`
    </sql>

    <insert id="insert">
      insert into `e_account` (id,wx_fan_id,amount)
      values (#{id} , #{wxFanId} , #{amount})
    </insert>

    <update id="updateByPrimaryKey" parameterType="net.monkeystudio.chatrbtw.entity.Account" >
        update `e_account`
        set
          wx_fan_id = #{wxFanId},
          amount = #{amount}
        where id = #{id}
    </update>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
        select <include refid="Base_Column_List"/>
        from `e_account`
        where id = #{id}
    </select>


</mapper>
